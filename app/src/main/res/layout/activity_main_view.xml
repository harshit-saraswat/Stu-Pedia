<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/appColor1">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/black"
            android:id="@+id/view"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:padding="10dp"
            android:layout_below="@id/view"
            android:id="@+id/db">

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/cblogo"
                android:id="@+id/dbImg"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dashboard"
                android:textSize="36sp"
                android:textStyle="bold"
                android:layout_toRightOf="@id/dbImg"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dp"/>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/black"
            android:layout_below="@id/db"
            android:id="@+id/v1"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:padding="10dp"
            android:id="@+id/ask"
            android:layout_below="@id/v1">

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/asklogo"
                android:id="@+id/askImg"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ask a question"
                android:textSize="36sp"
                android:textStyle="bold"
                android:layout_toRightOf="@id/askImg"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dp"/>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/black"
            android:layout_below="@id/ask"
            android:id="@+id/v2"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:padding="10dp"
            android:id="@+id/events"
            android:layout_below="@id/v2">

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/eventicon"
                android:id="@+id/eventsImg"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check Events"
                android:textSize="36sp"
                android:textStyle="bold"
                android:layout_toRightOf="@id/eventsImg"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dp"/>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/black"
            android:layout_below="@id/events"
            android:id="@+id/v3"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:padding="10dp"
            android:id="@+id/postevents"
            android:layout_below="@id/v3">

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/showevent"
                android:id="@+id/showeventImg"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Post an Event"
                android:textSize="36sp"
                android:textStyle="bold"
                android:layout_toRightOf="@id/showeventImg"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dp"/>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/black"
            android:layout_below="@id/postevents"
            android:id="@+id/v4"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:padding="10dp"
            android:id="@+id/aboutus"
            android:layout_below="@id/v4">

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/aulogo"
                android:id="@+id/auImg"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About Us"
                android:textSize="36sp"
                android:textStyle="bold"
                android:layout_toRightOf="@id/auImg"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dp"/>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/black"
            android:layout_below="@id/aboutus"
            android:id="@+id/v5"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:padding="10dp"
            android:id="@+id/contactus"
            android:layout_below="@id/v5">

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/cuicon"
                android:id="@+id/cuImg"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Us"
                android:textSize="36sp"
                android:textStyle="bold"
                android:layout_toRightOf="@id/cuImg"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dp"/>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/black"
            android:layout_below="@id/contactus"
            android:id="@+id/v6"/>

    </RelativeLayout>

</ScrollView>
